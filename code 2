import java.util.Scanner;

public class BitwiseOperations {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        // Input two integers
        System.out.print("Enter first number: ");
        int num1 = input.nextInt();

        System.out.print("Enter second number: ");
        int num2 = input.nextInt();

        // Perform bitwise operations
        int andResult = num1 & num2;
        int orResult = num1 | num2;
        int xorResult = num1 ^ num2;

        // Display results
        System.out.println("\nBitwise Operation Results:");
        System.out.println("AND (&)  Result = " + andResult + "  →  " + Integer.toBinaryString(andResult));
        System.out.println("OR  (|)  Result = " + orResult + "  →  " + Integer.toBinaryString(orResult));
        System.out.println("XOR (^)  Result = " + xorResult + "  →  " + Integer.toBinaryString(xorResult));

        input.close();
    }
}

